@inherits LayoutComponentBase

<PageTitle>Паспорта Районов</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>

        <article class="content px-4">
            <ErrorBoundary Context="Exception">
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="alert bg-danger text-white alert-dismissible">
                        <p class="my-custom-class">Произошла ошибка, свяжитесь с отделом информационных технологий</p>
                        Детали исключения: @Exception.GetType(): @Exception.Message
                    </div>
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>
